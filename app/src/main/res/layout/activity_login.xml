<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".Login">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginLeft="-10dp"
                android:layout_marginTop="60dp"
                android:src="@drawable/food" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="right"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/donut" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="300dp"
                android:src="@drawable/milk_tea" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="220dp"
                android:src="@drawable/ice_cream" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="130dp"
                android:src="@drawable/snack" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="right"
                android:layout_marginTop="180dp"
                android:layout_marginRight="-20dp"
                android:src="@drawable/milk_tea__1_" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="-30dp"
                android:layout_marginTop="310dp"
                android:src="@drawable/burger" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:text="Let's Begin"
            android:textColor="#ffffff"
            android:fontFamily="@font/nunito_bold"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/nunito_semibold"
            android:gravity="center"
            android:text="Get Food Recipes As Per Your Diet From Your Fridge Items On Your Finger Tips."
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@drawable/login"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:onClick="login"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/google"
            android:layout_height="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Sign In"
            android:textSize="20dp"
            android:textColor="#1e1e1e"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/nunito_bold"
            android:layout_height="wrap_content"/>
    </FrameLayout>
</FrameLayout>