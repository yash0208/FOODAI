<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:backgroundTint="@color/background"
        app:cardCornerRadius="5dp"
        android:layout_height="300dp">
        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/image"
            android:src="@drawable/card_default_back"
            android:layout_height="match_parent"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="#5C5C5C"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="90dp"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:text="Yash R Menta"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:fontFamily="@font/nunito_semibold"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:id="@+id/type"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/chef"
                    android:layout_width="wrap_content"
                    android:text="Evie3234"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:background="@drawable/tab_back_1"
                android:drawableLeft="@drawable/baseline_star_24"
                android:drawablePadding="5dp"
                android:text="4.0"
                android:gravity="center"
                android:id="@+id/reviews"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/nunito_bold"
                android:padding="10dp"
                android:layout_gravity="right|center_vertical"
                android:textSize="20dp"
                android:layout_height="50dp"/>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>