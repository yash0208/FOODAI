<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".EditProfile">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ImageButton
            android:layout_width="50dp"
            android:background="@drawable/tab_back_1"
            android:id="@+id/bck"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_height="50dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center"
            android:layout_height="150dp">
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/cf1"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/search"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/user"
                    android:layout_height="30dp"/>
                <ImageView
                    android:layout_width="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="35dp"
                    android:background="@drawable/name_et"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:layout_width="280dp"
                    android:layout_marginLeft="5dp"
                    android:hint="Your Name"
                    android:id="@+id/name"
                    android:fontFamily="@font/nunito_semibold"
                    android:textColorHint="#AAFFFFFF"
                    android:padding="5dp"
                    android:textColor="#ffffff"
                    android:background="#00000000"
                    android:layout_height="40dp"/>
            </LinearLayout>

        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/search"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/email"
                    android:layout_height="30dp"/>
                <ImageView
                    android:layout_width="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="35dp"
                    android:background="@drawable/name_et"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:layout_width="280dp"
                    android:layout_marginLeft="5dp"
                    android:hint="Email Address"
                    android:fontFamily="@font/nunito_semibold"
                    android:textColorHint="#AAFFFFFF"
                    android:padding="5dp"
                    android:id="@+id/email"
                    android:textColor="#ffffff"
                    android:background="#00000000"
                    android:layout_height="40dp"/>
            </LinearLayout>

        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/search"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/gender"
                    android:layout_height="30dp"/>
                <ImageView
                    android:layout_width="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="35dp"
                    android:background="@drawable/name_et"
                    android:layout_marginLeft="5dp"/>
                <RadioGroup
                    android:id="@+id/radio_group_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_button_male"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/nunito_semibold"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:checked="true"/>

                    <RadioButton
                        android:id="@+id/radio_button_female"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/nunito_semibold"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="Female"/>

                </RadioGroup>
            </LinearLayout>

        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/search"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ws"
                    android:layout_height="30dp"/>
                <ImageView
                    android:layout_width="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="35dp"
                    android:background="@drawable/name_et"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:layout_width="240dp"
                    android:id="@+id/age"
                    android:inputType="number"
                    android:layout_marginLeft="5dp"
                    android:hint="Current Age"
                    android:fontFamily="@font/nunito_semibold"
                    android:textColorHint="#AAFFFFFF"
                    android:padding="5dp"
                    android:textColor="#ffffff"
                    android:background="#00000000"
                    android:layout_height="40dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="YEARS"
                    android:fontFamily="@font/nunito_semibold"
                    android:textColorHint="#AAFFFFFF"
                    android:padding="5dp"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:background="#00000000"
                    android:layout_height="40dp"/>
            </LinearLayout>

        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/search"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ws"
                    android:layout_height="30dp"/>
                <ImageView
                    android:layout_width="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="35dp"
                    android:background="@drawable/name_et"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:layout_width="240dp"
                    android:id="@+id/weight"
                    android:inputType="number"
                    android:layout_marginLeft="5dp"
                    android:hint="Current Weight"
                    android:fontFamily="@font/nunito_semibold"
                    android:textColorHint="#AAFFFFFF"
                    android:padding="5dp"
                    android:textColor="#ffffff"
                    android:background="#00000000"
                    android:layout_height="40dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="KG"
                    android:fontFamily="@font/nunito_semibold"
                    android:textColorHint="#AAFFFFFF"
                    android:padding="5dp"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:background="#00000000"
                    android:layout_height="40dp"/>
            </LinearLayout>

        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/search"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/heigh"
                    android:layout_height="30dp"/>
                <ImageView
                    android:layout_width="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="35dp"
                    android:background="@drawable/name_et"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:layout_width="240dp"
                    android:layout_marginLeft="5dp"
                    android:hint="Height In Cm"
                    android:fontFamily="@font/nunito_semibold"
                    android:textColorHint="#AAFFFFFF"
                    android:padding="5dp"
                    android:id="@+id/height"
                    android:inputType="number"
                    android:textColor="#ffffff"
                    android:background="#00000000"
                    android:layout_height="40dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="CM"
                    android:fontFamily="@font/nunito_semibold"
                    android:textColorHint="#AAFFFFFF"
                    android:padding="5dp"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:background="#00000000"
                    android:layout_height="40dp"/>
            </LinearLayout>

        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/search"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/bmi"
                    android:layout_height="30dp"/>
                <ImageView
                    android:layout_width="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="35dp"
                    android:background="@drawable/name_et"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:layout_width="280dp"
                    android:layout_marginLeft="5dp"
                    android:hint="Bodi Mass Level"
                    android:enabled="false"
                    android:fontFamily="@font/nunito_semibold"
                    android:textColorHint="#AAFFFFFF"
                    android:padding="5dp"
                    android:textColor="#ffffff"
                    android:background="#00000000"
                    android:layout_height="40dp"/>
            </LinearLayout>

        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/search"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/weight_loss" />
                <ImageView
                    android:layout_width="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="35dp"
                    android:background="@drawable/name_et"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:layout_width="280dp"
                    android:layout_marginLeft="5dp"
                    android:hint="Target Weight"
                    android:fontFamily="@font/nunito_semibold"
                    android:textColorHint="#AAFFFFFF"
                    android:padding="5dp"
                    android:inputType="number"
                    android:id="@+id/target"
                    android:textColor="#ffffff"
                    android:background="#00000000"
                    android:layout_height="40dp"/>
            </LinearLayout>

        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/search"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/weight_loss" />
                <ImageView
                    android:layout_width="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="35dp"
                    android:background="@drawable/name_et"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:layout_width="280dp"
                    android:layout_marginLeft="5dp"
                    android:hint="Target Weight"
                    android:fontFamily="@font/nunito_semibold"
                    android:textColorHint="#AAFFFFFF"
                    android:padding="5dp"
                    android:inputType="number"
                    android:id="@+id/week"
                    android:textColor="#ffffff"
                    android:background="#00000000"
                    android:layout_height="40dp"/>
            </LinearLayout>

        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"

            android:layout_marginLeft="10dp"
            android:background="@drawable/search"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/weight_loss" />
                <ImageView
                    android:layout_width="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="35dp"
                    android:background="@drawable/name_et"
                    android:layout_marginLeft="5dp"/>
                <Spinner
                    android:layout_width="280dp"
                    android:layout_marginLeft="5dp"
                    android:hint="Target Weight"
                    android:id="@+id/spinner"
                    android:fontFamily="@font/nunito_semibold"
                    android:textColorHint="#AAFFFFFF"
                    android:padding="5dp"
                    android:textColor="#ffffff"
                    android:background="#00000000"
                    android:layout_height="40dp"/>
            </LinearLayout>

        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/search"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/weight_loss" />
                <ImageView
                    android:layout_width="2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="35dp"
                    android:background="@drawable/name_et"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:layout_width="240dp"
                    android:layout_marginLeft="5dp"
                    android:hint="Target Calorie Intake"
                    android:fontFamily="@font/nunito_semibold"
                    android:textColorHint="#AAFFFFFF"
                    android:padding="5dp"
                    android:inputType="number"
                    android:id="@+id/calorie"
                    android:textColor="#ffffff"
                    android:background="#00000000"
                    android:layout_height="40dp"/>
                <ImageView
                    android:layout_width="40dp"
                    android:src="@drawable/refresh"
                    android:padding="5dp"
                    android:id="@+id/refresh"
                    android:layout_marginLeft="5dp"
                    android:layout_height="40dp"/>
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
</ScrollView>